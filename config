exec_always --no-startup-id picom
exec_always --no-startup-id feh --bg-scale --no-xinerama ~/.config/i3/wallpapers/main.jpg

# Set mod key to Mod4 (Windows key)
set $mod Mod4

# Basic setup
font pango:monospace 10

# Set terminal (change if you prefer another)
set $term kitty

# Border
default_border none

# Gaps
gaps inner 10

# Open terminal
bindsym $mod+Return exec $term

# Open dmenu launcher
bindsym $mod+d exec dmenu_run

# Close focused window
bindsym $mod+q kill

# Reload and restart i3
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Exit i3
bindsym $mod+Shift+e exec "i3-msg exit"

# Brightness
bindsym $mod+equal exec --no-startup-id brightnessctl set +5%
bindsym $mod+minus exec --no-startup-id brightnessctl set 5%-

# Volume
bindsym $mod+Shift+equal exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym $mod+Shift+minus exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%

# External Display
bindsym $mod+Shift+w exec --no-startup-id xrandr --output HDMI-1 --mode 1920x1080 --pos 0x-1080 --primary --output eDP-1 --mode 1366x768 --pos 0x0
bindsym $mod+Shift+s exec --no-startup-id xrandr --output HDMI-1 --mode 1920x1080 --pos 0x768 --primary --output eDP-1 --mode 1366x768 --pos 0x0
bindsym $mod+Shift+d exec --no-startup-id xrandr --output HDMI-1 --mode 1920x1080 --pos 1366x0 --primary --output eDP-1 --mode 1366x768 --pos 0x0
bindsym $mod+Shift+a exec --no-startup-id xrandr --output HDMI-1 --mode 1920x1080 --pos -1920x0 --primary --output eDP-1 --mode 1366x768 --pos 0x0
bindsym $mod+Shift+o exec --no-startup-id xrandr --output HDMI-1 --off

# Lock Screen
bindsym $mod+Shift+z exec i3lock -c 000000

# Nvimesc-style navigation: use hjkl to move focus between windows
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+v split h
bindsym $mod+s split v

# Move windows using Shift + hjkl
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Resize windows with Ctrl + hjkl
mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # Exit resize mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Workspace switching
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# Floating toggle
bindsym $mod+Shift+space floating toggle

# Fullscreen toggle
bindsym $mod+f fullscreen toggle

# i3status bar
bar {
    status_command i3status
    colors {
        background #171B21
        statusline #DBE9EE
        separator  #3A506B

        focused_workspace  #171B21 #3A506B #EDEDED
        active_workspace   #171B21 #3A506B #EDEDED
        inactive_workspace #171B21 #0B132B #898989
        urgent_workspace   #171B21 #0B132B #EDEDED
    }
}
